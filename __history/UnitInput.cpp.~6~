#include <vcl.h>
#pragma hdrstop

#include "UnitInput.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TDataInput *DataInput;
//---------------------------------------------------------------------------
__fastcall TDataInput::TDataInput(TComponent* Owner)
	: TForm(Owner)
{
	StringGrid->Hide();
}
//---------------------------------------------------------------------------

//int n,m;
void __fastcall TDataInput::ButtonClick(TObject *Sender)
{
	AnsiString s1, s2;
	s1 = EditRows->Text;
	s2 = EditColumns->Text;
	MainForm->n = StrToInt(s1);
	MainForm->m = StrToInt(s2);
	StringGrid->RowCount = MainForm->n;
	StringGrid->ColCount = MainForm->m;
	if (MainForm->n > 0 && MainForm->m > 0){
		StringGrid->Canvas->Brush->Color = clYellow;
		StringGrid->Show();
	}
}
//---------------------------------------------------------------------------
void __fastcall TDataInput::ButtonInputClick(TObject *Sender)
{
	DataInput->Close();
}
